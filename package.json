{
  "name": "yaasl",
  "version": "0.0.0",
  "description": "yet another atomic store library",
  "author": "PrettyCoffee",
  "homepage": "https://github.com/PrettyCoffee/yaasl",
  "license": "MIT",
  "workspaces": [
    "packages/utils",
    "packages/core",
    "packages/devtools",
    "packages/react",
    "demo/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "jest --testMatch **/*.test.*",
    "test:watch": "npm run test -- --watchAll",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "validate": "npm run validate --workspaces",
    "generate-docs": "node ./scripts/generateDocs.js",
    "prepare": "cozy-git-hooks install -q",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch"
  },
  "devDependencies": {
    "@pretty-cozy/eslint-config": "^0.2.0",
    "@pretty-cozy/git-hooks": "^0.2.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "eslint-import-resolver-exports": "^1.0.0-beta.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^15.11.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
