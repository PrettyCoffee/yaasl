{
  "name": "yaasl",
  "version": "0.1.0",
  "description": "yet another atomic store library",
  "keywords": [
    "atom",
    "store",
    "vanilla-js",
    "react"
  ],
  "author": "PrettyCoffee",
  "homepage": "https://github.com/PrettyCoffee/yaasl",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "types": "./dist/@types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/@types/index.d.ts",
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./*": {
      "types": "./dist/@types/*/index.d.ts",
      "import": "./dist/mjs/*/index.js",
      "require": "./dist/cjs/*/index.js"
    }
  },
  "workspaces": [
    "./",
    "./demo/*"
  ],
  "scripts": {
    "build": "run-s clean compile",
    "clean": "rimraf ./dist",
    "compile": "run-p compile:mjs compile:cjs compile:types",
    "compile:mjs": "tsc --p ./tsconfig.mjs.json",
    "compile:cjs": "tsc --p ./tsconfig.cjs.json",
    "compile:types": "tsc --p ./tsconfig.mjs.json --declaration --emitDeclarationOnly --outDir ./dist/@types",
    "test": "jest --testMatch **/*.test.*",
    "test:watch": "npm run test -- --watchAll",
    "lint": "eslint ./src --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "generate-docs": "node ./scripts/generateDocs.js",
    "prepare": "cozy-git-hooks install -q",
    "release": "release-it"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@pretty-cozy/eslint-config": "^0.2.0",
    "@pretty-cozy/git-hooks": "^0.2.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.18",
    "eslint-import-resolver-exports": "^1.0.0-beta.5",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "release-it": "^15.11.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
